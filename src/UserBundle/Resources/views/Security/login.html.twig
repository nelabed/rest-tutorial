{% extends "AppBundle:Layout:base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}


    <div class="bb row col-centered" data-sr="enter top and move 10px easeIn 0.2s">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form-group col-centered">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <br/>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                           class="app-form__control"/>

                </div>

                <div class="form-group col-centered">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <br/>
                    <input type="password" id="password" name="_password" required="required" class="app-form__control"/>
                </div>
                <div class="form-group text-center">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="form-group text-center col-centered col-lg-1 col-md-1 col-sm-1 col-xs-1">
                    <input type="submit" class="btn bg-lg btn-primary" id="_submit" name="_submit"
                           value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </form>

    </div>

{% endblock %}
