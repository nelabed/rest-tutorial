{% form_theme form 'AppBundle:Form:form_horizontal.html.twig' %}
<div class="bb">
    <h2>{{ 'change_password.submit'|trans({},'FOSUserBundle') }}</h2>
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form"
          id="form_change_password">
        {{ form_start(form,{'attr': {'class': 'form' }}) }}
        <div class="form-group col-lg-12 row">
            <label>{{ form_label(form.current_password) }}</label>
            <div class="form-group">
                {{ form_widget(form.current_password) }}
            </div>
        </div>

        <div class="form-group col-lg-12 row">
            <label>{{ form_label(form.plainPassword.first) }}</label>
            <div class="form-group">
                {{ form_widget(form.plainPassword.first) }}
            </div>
        </div>


        <div class="form-group col-lg-12 row">
            <label>{{ form_label(form.plainPassword.second) }}</label>
            <div class="form-group">
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <div class="buttons">
            <input type="submit" class="btn" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}"/>
        </div>

        {{ form_end(form) }}


    </form>

</div>
